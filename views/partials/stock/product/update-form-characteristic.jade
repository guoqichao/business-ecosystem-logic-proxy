.row
  .col-xs-12
    .panel.panel-default.z-depth-1(ng-repeat="characteristic in updateVM.item.productSpecCharacteristic", ng-init="characteristicIndex = $index")
      .panel-heading
        .h4
          strong {{ characteristic.name }}
      .panel-body
        p.text-dark-secondary {{ characteristic.description ? characteristic.description : '无描述' }}
        .form-group
          .item-radio.readonly(ng-repeat="characteristicValue in characteristic.productSpecCharacteristicValue")
            label.radio
              .track
                input(type="radio", name="{{ 'updateVM_char' + characteristicIndex }}", ng-checked="{{ characteristicValue.default }}")
                i.fa.fa-lg
              | {{ updateVM.formatCharacteristicValue(characteristic, characteristicValue) }}
  .col-xs-12(ng-if="!updateVM.item.productSpecCharacteristic.length")
    .alert.alert-info.text-center 没有产品特性
    //No characteristics included.